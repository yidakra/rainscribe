# Required: Your Gladia API key
GLADIA_API_KEY=your_api_key_here

# Optional: URL of the HLS stream to transcribe
STREAM_URL=https://wl.tvrain.tv/transcode/ses_1080p/playlist.m3u8

# Optional: Port for the HTTP server
HTTP_PORT=8080

# Optional: Minimum number of captions to buffer before starting
MIN_CUES=2

# Optional: Directory for output files
OUTPUT_DIR=output

# Optional: Enable detailed message logging
DEBUG_MESSAGES=false